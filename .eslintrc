{
  "env": {
    "jest": true
  },
  "overrides": [
    {
      "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "files": ["*.ts"],
      "rules": {
        "@typescript-eslint/ban-types": "off",
        "prettier/prettier": [
          "error",
          {
            "arrowParens": "avoid",
            "bracketSameLine": true,
            "bracketSpacing": true,
            "importOrder": [
              "<THIRD_PARTY_MODULES>",
              "^@angular/(.*)$",
              "^@app/(.*)$",
              "^@assets/(.*)$",
              "^@environments/(.*)$",
              "^[./]"
            ],
            "importOrderCaseInsensitive": false,
            "importOrderParserPlugins": [
              "typescript",
              "classProperties",
              "decorators-legacy"
            ],
            "importOrderSeparation": true,
            "importOrderSortSpecifiers": true,
            "printWidth": 90,
            "semi": true,
            "singleQuote": true,
            "tabWidth": 2,
            "trailingComma": "all",
            "useTabs": false
          }
        ]
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "root": true
}
